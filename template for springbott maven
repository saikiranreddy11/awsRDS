sg_egress_rules = {
  all_traffic = {
    from_port   = 0
    to_port     = 0
    ip_protocol = "-1"
    description = "Allow all outbound traffic"
    cidr_ipv4   = "0.0.0.0/0"
  }
}



  security_group_egress_rules  = var.sg_egress_rules

output "alb_dns_name" {
  description = "The DNS name of the ALB"
  value       = module.ecs_alb.dns_name
}

output "alb_security_group_id" {
  description = "The security group ID attached to the ALB"
  value       = module.ecs_alb.security_group_id
}

output "alb_target_group_arn" {
  description = "The ARN of the ALB target group"
  value       = module.ecs_alb.target_groups["nginx-tg"].arn
}

output "route53_record" {
  description = "Route 53 record created for the ALB"
  value       = module.ecs_alb.route53_records
}
