locals {
  vpc_id         = data.terraform_remote_state.network.outputs.vpc_id
  subnets        = data.terraform_remote_state.network.outputs.app_subnet_ids
  security_groups = [data.terraform_remote_state.network.outputs.ecs_service_sg_id]

  # Dynamically fetch the zone name from Terraform remote state
  hosted_zone_name = values(data.terraform_remote_state.network.outputs.route53_zone_name)[0]

  # Use the dynamically fetched zone name to get the corresponding Hosted Zone ID
  hosted_zone_id = lookup(data.terraform_remote_state.network.outputs.route53_zone_zone_id, local.hosted_zone_name, "")
}
