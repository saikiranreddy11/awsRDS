        <relativePath/> <!-- lookup parent from repository -->
    </parent>

    <groupId>com.qdx</groupId>
    <artifactId>springboot-demo</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <name>springboot-demo</name>
    <description>Sample Spring Boot project for QDX</description>

    <properties>
        <java.version>17</java.version>
    </properties>

    <!-- ✅ Add MedPlus Artifactory Repository -->
    <repositories>
        <repository>
            <id>Artifactory</id>
            <name>MedPlus Artifactory</name>
            <url>http://repo.dev.medplus.com/artifactory/public</url>
        </repository>
        <repository>
            <id>ArtifactorySnapshots</id>
            <name>MedPlus Artifactory Snapshots</name>
